#include <iostream>
#include <String>

using namespace std;

int main (){
	int num1, num2, num3, num4, num5;
	int maior;
	while(true){
		cout << "Digite o numero um: " <<endl;
		cin>>num1;
		cout << "Digite o numero dois: " <<endl;
		cin>>num2;
		cout << "Digite o numero tres: " <<endl;
		cin>>num3;
		cout << "Digite o numero quatro: " <<endl;
		cin>>num4;
		cout << "Digite o numero cinco: " <<endl;
		cin>>num5;
		if (num2>num1 && num2>num3 && num2>num4 && num2>num5){
			maior = num2;
			break;
		}else if (num3>num1 && num3 > num2 && num3>num4 && num3>num5){
			maior = num3;
			break;
		}else if (num4>num1 && num4> num2 && num4>num3 && num4>num5){
			maior = num4;
			break;
		}else if (num5>num1 && num5 > num2 && num5>num3 && num5>num4){
			maior = num5;
			break;
		}else {
			maior = num1;
			break;
		}
	}
	cout<<"O maior nï¿½mero digitado foi : "<< maior <<endl;
}
