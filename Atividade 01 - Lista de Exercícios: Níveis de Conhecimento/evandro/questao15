#include <iostream>

using namespace std;
int main() {
int n;
long long fatorial = 1;

cout << "Digite um nmr;";
cin >> n;

if(n<0){
	cout << "Fatorial nao existe para negativos";
}else if (n == 0 || n == 1){
	cout << "O fatorial de " << n << " Ã© 1 ";
}else {
	int i = 1;
	while (i <= n) {
		fatorial *= i;
		i++;
	}
	cout << "O fatorial de " << n << " e: " << fatorial;
}
}
